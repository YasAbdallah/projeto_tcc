<section class="container d-flex flex-row">
    <section class="agendar">
        <h1>Agendar serviço</h1>
        <form action="/agendar" method="POST">
            <div class="form-group">
                <label for="data">Escolha o dia:</label>
                <section class="input-container">
                    <input type="date" id="data" name="data" required>
                </section>
            </div>
            <div class="form-group">
                <label for="horario">Escolha o horário:</label>
                <section class="input-container">
                    <input type="time" id="horario" name="horario" required>
                </section>
            </div>
            <div class="form-group">
                <label for="barbeiro">Escolha o barbeiro:</label>
                <section class="input-container">
                    <select id="barbeiro" name="barbeiro" required>
                        {{#each barbeiros}}
                        <option value="{{_id}}">{{nome}}</option>
                        {{/each}}
                    </select>
                </section>
            </div>
            <div class="form-group">
                <label for="servico">Escolha o tipo de serviço:</label>
                <section class="input-container">
                    <select id="servico" name="servico" required>
                        {{#each barbeiros.servico}}
                        <option value="{{this.servico}}">{{this.servico}}</option>
                        {{/each}}
                    </select>
                </section>
            </div>
            <button type="submit">Agendar</button>
        </form>
    </section>
    <section class="agendamentos">
        <h2>Meus agendamentos</h2>
        <table>
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Horário</th>
                    <th>Barbeiro</th>
                    <th>Serviço</th>
                </tr>
            </thead>
            <tbody>
                {{#each agendamentos}}
                <tr>
                    <td>{{this.data}}</td>
                    <td>{{this.horario}}</td>
                    <td>{{this.barbeiro}}</td>
                    <td>{{this.servico}}</td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="4">Nenhum agendamento encontrado.</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>
</section>