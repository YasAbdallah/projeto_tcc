<section class="container">
    <section class="usuario">
        <h1>Bem-vindo, {{user.nome}}!</h1>
        <p>Estamos felizes em tê-lo de volta.</p>
        <p>Data de hoje: <span id="dataAtual"></span></p>
    </section>

    <section class="container">
        <section class="agendamentos">
            <h2>Seus Agendamentos em abertos</h2>
            <table>
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Horário</th>
                        <th>Cliente</th>
                        <th>Serviço</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each agendamento}}
                    <tr>
                        <td name="dataAgendamento" >{{this.dataAgendamento}}</td>
                        <td>{{this.horaAgendamento}}</td>
                        <td>{{this.cliente.nome}}</td>
                        <td>{{this.servico}}</td>
                        <td>{{this.status}}</td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="4">Nenhum agendamento encontrado.</td>
                    </tr>
                    
                    {{/each}}
                    
                </tbody>
            </table>
        </section>
    </section>
</section>

<script type="module" src="/js/painel/funcionario/validacao.js"></script>