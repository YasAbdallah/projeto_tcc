<section class="container border shadow">
    <a href="/solicitar" class="btn-link">Limpar filtros</a>
    
    <div class="d-flex justify-content-between mt-3">
        <!-- Carrinho de Compras -->
        <button class="btn btn-outline-info btn-lg ms-3 me-4 position-relative" data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasCarrinho" aria-controls="offcanvasCarrinho">
            <i class="fa-solid fa-cart-shopping"></i>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" 
                  name="quantidadeItens">0</span>
        </button>
        
        <!-- Formulário de Pesquisa -->
        <div class="m-4">
            <form action="/solicitar/search" method="get">
                <div class="input-group">
                    <input type="text" name="produto" id="produto" class="form-control" placeholder="Pesquisar produto" autofocus>
                    <button type="submit" class="btn btn-secondary"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabela de Produtos -->
    <section class="table-responsive mt-4">
        <table class="table table-striped table-hover align-middle" id="solicitar">
            <thead>
                <tr class="fs-5">
                    <th>Produto</th>
                    <th>Descrição</th>
                    <th>Obs.</th>
                    <th>Adicionar</th>
                </tr>
            </thead>
            <tbody class="table-group-divider" id="itensTabela"></tbody>
        </table>
    </section>

    <!-- Paginação -->
    {{> _paginacao}}
</section>

<!-- Offcanvas Carrinho -->
<div class="offcanvas offcanvas-end w-50" tabindex="-1" id="offcanvasCarrinho" aria-labelledby="offcanvasCarrinhoLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasCarrinhoLabel">Carrinho de Compras</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Fechar"></button>
    </div>
    <div class="offcanvas-body">
        <div class="d-flex justify-content-between p-2">
            <h5>Itens no Carrinho <span class="badge rounded-pill bg-danger" name="quantidadeItens">0</span></h5>
            <div class="btn-group">
                <form name="removerTodos">
                    <button type="submit" class="btn btn-outline-danger m-1">Remover Todos</button>
                </form>
                <form name="solicitar">
                    <button type="submit" class="btn btn-outline-success m-1">Solicitar Itens</button>
                </form>
            </div>
        </div>
        
        <!-- Tabela do Carrinho (Conteúdo Dinâmico) -->
        <section class="table-responsive" id="conteudoCarrinho">
            <table class="table table-striped table-hover table-sm align-middle">
                <thead>
                    <tr class="table-light">
                        <th>Código</th>
                        <th>Produto</th>
                        <th>Descrição</th>
                        <th>Quantidade</th>
                        <th>Remover</th>
                    </tr>
                </thead>
                <tbody id="tbodyCarrinho">
                    <!-- Conteúdo dinâmico do carrinho inserido via JS -->
                </tbody>
            </table>
        </section>
    </div>
</div>

<script type="module" src="/js/solicitacao/carrinho.js"></script>
<script type="module" src="/js/funcoes.js"></script>