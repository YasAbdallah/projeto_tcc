<section class="container border shadow">
    <a href="/minhasSolicitacoes" class="btn-link">Limpar filtros</a>

<div class="d-flex justify-content-between align-items-center mt-4">
        <div class="p-2">
            <!-- Título e Informações -->
            <h1 class="position-relative">
                Minhas Solicitações
                <span class="badge rounded-pill bg-secondary position-absolute top-0 start-100 translate-middle ms-5 fs-6">
                    <i class="fa fa-info-circle" data-bs-toggle="popover" data-bs-trigger="hover" data-bs-html="true"
                        data-bs-title="Informações visuais:" data-bs-content="<ul>
                                           <li>Borda Verde: O produto pode ser retirado com o responsável do almoxarifado.</li>
                                           <li>Borda Amarela: O produto está em espera pela autorização do responsável para retirada.</li>
                                           <li>Borda Vermelha: O produto foi negado para retirada pelo responsável.</li>
                                         </ul>"></i>
                </span>
            </h1>
        </div>

        <!-- Filtros e Pesquisa -->
        <div class="p-2">
            <div class="d-flex flex-row">
                <!-- Barra de Pesquisa -->
                <form action="/minhasSolicitacoes/search" method="get" id="pesquisaProduto" class="p-2">
                    <div class="input-group form-floating">
                        <input type="text" name="query" id="query" class="form-control">
                        <label for="query">Pesquisar:</label>
                        <button type="submit" class="btn btn-secondary">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Lista de Solicitações e Modal do Armazém -->
    <section class="d-flex flex-wrap mt-4" id="listaSolicitacoes"></section>
    {{> _paginacao}}
</section>
<section class="d-flex mt-4" id="armazemModal"></section>


<script type="module" src="/js/minhasSolicitacoes/listaSolicitacoes.js"></script>
