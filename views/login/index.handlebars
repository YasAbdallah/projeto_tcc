<img src="/img/topo.webp" alt="imagem de background" class="backgroung-login">
<section class="d-flex flex-column">
    <div class="position-absolute top-50 start-50 translate-middle">
        <div class="card w-100">
            <div class="card-body">
                <form id="formLogin" name="formLogin">
                    <legend id="formLoginTitle" class="card-title text-center">Efetuar Log-in</legend>
                    <fieldset aria-labelledby="formLoginTitle">
                        <section class="m-3">
                            <label class="form-label" for="email">E-mail:</label>
                            <input type="text" name="email" id="email" class="form-control" placeholder="seu@email.aqui" aria-required="true" aria-describedby="emailFormat" autocomplete="email" required>
                            <small id="cpfFormat" class="text-muted">Digite no formato exemplo@email.com</small>
                        </section>
                        <section class="m-3">
                            <label class="form-label" for="senha">Senha:</label>
                            <input type="password" name="senha" id="senha" class="form-control" placeholder="Senha"
                                aria-required="true" autocomplete="current-password" required>
                        </section>
                        <section class="m-3">
                            <a href="/login/esquecerSenha" class="btn-link small" aria-label="Esqueci minha senha">Esqueci
                                minha senha</a>
                        </section>
                        <section class="d-grid gap-2">
                            <button type="submit" class="btn btn-lg btn-primary m-3"
                                aria-label="Confirmar log-in">Entrar</button>
                            <div class="d-flex flex-column">
                                <span class="align-self-center">Ainda n√£o tem Conta?</span>
                                <a href="/criarConta" class="align-self-center">Clique aqui para criar.</a>
                            </div>
                        </section>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</section>


